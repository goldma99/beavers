	author = {Walker, Wayne S. and Gorelik, Seth R. and Cook-Patton, Susan C. and Baccini, Alessandro and Farina, Mary K. and Solvik, Kylen K. and Ellis, Peter W. and Sanderman, Jon and Houghton, Richard A. and Leavitt, Sara M. and Schwalm, Christopher R. and Griscom, Bronson W.},
	month = jun,
	year = {2022},
