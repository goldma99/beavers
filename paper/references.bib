	urldate = {2024-11-18},
	journal = {Journal of the Association of Environmental and Resource Economists},
	author = {Fenichel, Eli P. and Abbott, Joshua K.},
	year = {2014},
	note = {Publisher: [Association of Environmental and Resource Economists, The University of Chicago Press]},
	pages = {1--27},
}

