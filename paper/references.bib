	journal = {Oecologia},
	author = {Wright, Justin P. and Jones, Clive G. and Flecker, Alexander S.},
	month = jun,
	year = {2002},
	note = {Publisher: Springer},
	keywords = {Beaver, Ecosystem engineering, Habitat heterogeneity, Landscape, Plant community, habitat, services},
	pages = {96--101},
}

