	month = jan,
	year = {2021},
	note = {Publisher: Blackwell Publishing Ltd},
	keywords = {Eurasian beaver Castor fiber, North American beaver Castor canadensis, Northern Hemisphere, ecosystem services, meta-analytical function transfer, monetary valuation, payments for ecosystem services},
	pages = {25--39},
}

