	year = {2019},
	note = {\_eprint: https://onlinelibrary.wiley.com/doi/pdf/10.1002/jwmg.21601},
	keywords = {Belgium, Castor fiber, Eurasian beaver, beaver dam, ecosystem engineer, prediction model},
	pages = {356--364},
}

@article{kitchener_history_1997,
	title = {The history of the {Eurasian} {Beaver} {Castor} fiber in {Scotland}},
